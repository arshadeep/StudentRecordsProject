@model Search

@{
    ViewBag.Title = "Search";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Search" method="post"  class="mt-3">
    <div class="form-group row">
        <label asp-for="SearchTerm" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10"><input asp-for="SearchTerm" class="form-control"/></div>
    </div>

    <div class="form-group row">
        <div  class="col-sm-10"><button type="submit" class="btn btn-primary">Search</button></div>
    </div>
</form>